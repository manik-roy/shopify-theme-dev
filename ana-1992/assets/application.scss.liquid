body {
    font-family: 'Poppins', sans-serif;
}
a{
    color: #949494 ;
}
.color-primary {
    color: #949494 ;
}

.nav-item {
   a {
        color:#000;
        font-weight:600;
        font-size:18px;
   }
}
.header-top-area {
    .user-menu {
        a {
            padding:20px;
        }
    }
    color: #949494;
}

.single-product-item  {
    .product-image {
        display: block;
        height: 320px;
        background-position: center;
        background-size: cover;
    }
    h3 {
        font-size: 16px;
        color: azure;
    }
}

.item-container {
    position: relative;

    .bg-img {
            position: absolute;
            height: 450px;
            max-width: 350px;
            background-color: #949494;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            z-index: 1;
            margin:0 auto;
            &:after {
              position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 100%;
            content: "";
            background: #949494;
            z-index: 1;
            opacity: 0.3;
            }
    }
    .text-content {
        padding-top: 185px;
        position: relative;
        z-index: 2;
        padding-bottom: 50px;
        max-width: 300px;
        h3 {
            font-size: 70px;
            font-weight: 700;
        }
    }
}
.video-conatiner {
    .embed-responsive.embed-responsive-16by9 {
        max-width:100%;
    }
    h3 {
        margin-top:15px;
    }
}