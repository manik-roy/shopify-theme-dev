<div class="row">
    <div class="col-md-6 col-xl-6">
        <div class="item-container">
            <div class="bg-img">
                <img src="{{section.settings.bannerImg | img_url: 'large'}}" alt="">
            </div>
            <h3>{{section.settings.title}}</h3>
            <p>{{section.settings.sectionDesc}}</p>
            {% if section.settings.link != blank %}
            <a href={{section.settings.link}}>
                <span><i class="fa fa-angle-double-right"></i></span>
            </a>
            {% endif %}
        </div>
    </div>
    <div class="col-md-6 col-xl-6">
        <div class="item-container">
                    <div class="embed-responsive embed-responsive-16by9">
                       <iframe class="embed-responsive-item" width="100%" height="300px" src="https://www.youtube.com/embed/{{section.settings.video_url}}" frameborder="0" allowfullscreen></iframe>
                    </div>
        
                    <h3>{{section.settings.videoTitle}}</h3>
                        <p>{{section.settings.videoDesc}}</p>
                    {% if section.settings.videoLink != blank %}
                        <a href={{block.settings.videoLink}}>
                            <span><i class="fa fa-angle-double-right"></i></span>
                        </a>
                    {% endif %}
            </div>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Video and Image Section",
        "class": "video-area",
        "settings": [
            {
                "type": "image_picker",
                "id": "bannerImg",
                "label": "Banner Image"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Section Title",
                "default": "Sprging Girls",
                "placeholder": "title"
            },
            {
                "type": "url",
                "id": "link",
                "label": "Secion Redirect link"
            },
            {
                "type": "textarea",
                "id": "sectionDesc",
                "label": "Section footer text",
                "default": "Lorem ipsum dummy text for"
            },
            {
                "type": "url",
                "id": "videoLink",
                "label": "Video Footer Redirect Url"
            },
            {
                "type": "text",
                "id": "videoTitle",
                "label": "Video Section title"
            },
            {
                "type": "textarea",
                "id": "videoDesc",
                "label": "Video Section details"
            },
            {
                "type": "text",
                "id": "video_url",
                "label": "Upload Video"
            }
        ],
        "presets":[
            {
                "name":"Image and Video Section",
                "category":"custorm content"
            }
        ]
        
    }
{% endschema %}
